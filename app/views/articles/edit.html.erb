<h1>Editing article</h1>
 
<%= form_for [@category, @article], url: article_path(@article), method: :patch do |f| %>
 
  <p>
    <%= f.label "Description" %><br>
    <%= f.text_field :description %>
  </p>
 
  <p>
    <%= f.label "Condition" %><br>
    <%= f.text_area :conditon %>
  </p>
 
  <p>
    <%= f.label "Price" %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', articles_path %>