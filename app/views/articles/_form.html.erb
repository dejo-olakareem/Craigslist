<%= form_for  @article  do |f| %>
 
  <p>
    <%= f.label "Description" %><br>
    <%= f.text_field :description %>
  </p>
 
  <p>
    <%= f.label "Condition" %><br>
    <%= f.text_area :conditon %>
  </p>
 
  <p>
    <%= f.label "Price" %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>